package com.curtin.securehire.service;

import com.curtin.securehire.entity.Resume;
import com.curtin.securehire.entity.User;

import java.util.Date;
import java.util.List;

public interface ResumeService {
    // Basic CRUD operations
    Resume findById(Integer resumeId);
    List<Resume> findAll();
    Resume save(Resume resume);
    Resume update(Integer resumeId, Resume resume);
    void delete(Integer resumeId);

    // User-specific operations
    List<Resume> findByUser(User user);
    List<Resume> findByUserId(Integer userId);
    Resume addResumeForUser(Integer userId, Resume resume);

    // Specialized operations
    Resume setDefaultResume(Integer userId, Integer resumeId);
    List<Resume> findByNameContaining(String name);
    List<Resume> findByUploadedDateAfter(Date date);
    Long countByUserId(Integer userId);

    // Advanced queries
    List<Resume> findByFilters(Integer userId, String name, Date startDate);
}
